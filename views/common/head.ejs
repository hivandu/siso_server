<!-- loaded when need -->
<% if (state.state == 'home') { %> <link rel="stylesheet" href="/stylesheets/home.css"/> <%}%>
<% if (state.state == 'admin') { %> <link rel="stylesheet" href="/stylesheets/admin.css"/> <%}%>

<% if (state.state == 'entry') { %>
    <link rel="stylesheet" href="/stylesheets/create.css"/>
    <% if (state.richEditor) { %>
        <link rel="stylesheet" href="/stylesheets/bootstrap.css"/>
        <link rel="stylesheet" href="/stylesheets/summernote.css"/>
    <% }%>
<% }%>

<% if (state.state == 'photo') { %>
    <link rel="stylesheet" href="/stylesheets/cropper.css"/>
    <link rel="stylesheet" href="/stylesheets/photo.css"/>
    <link rel="stylesheet" href="/stylesheets/dragula.css"/>
<%}%>
<% if (state.state == 'user' || state.state == 'user.login') { %>
    <link rel="stylesheet" href="/stylesheets/user.css"/>
<%}%>
